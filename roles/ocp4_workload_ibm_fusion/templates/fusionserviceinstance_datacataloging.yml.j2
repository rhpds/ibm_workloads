---
apiVersion: service.isf.ibm.com/v1
kind: FusionServiceInstance
metadata:
  name: data-cataloging-service-instance
  namespace: ibm-spectrum-fusion-ns
spec:
  parameters:
    - name: namespace
      provided: false
      value: ibm-data-cataloging
    - name: rwx_storage_class
      provided: true
      value: {{ ocp4_workload_ibm_fusion_data_cataloging_storage_class }}
    - name: doInstall
      provided: true
      value: 'true'
    - name: license
      provided: true
      value: '{"accept": true}'
  serviceDefinition: data-cataloging-service-definition
  triggerUpdate: false
  doInstall: true
  enabled: true
